<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.erika.uplug"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/udoo_logo"
        android:label="@string/app_name"        
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.uplug.uplug.UplugMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.uplug.uplug.GraphActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.uplug.uplug.StatsActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.uplug.uplug.SetApplianceActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.uplug.uplug.InstantConsumptionActivity"
            android:label="@string/app_name" >
        </activity>
        
        
    </application>

</manifest>
