<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/udoo_bg_1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UplugMainActivity" >

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#ec008c"
        android:onClick="onClassificationClick"
        android:text="Classification"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ec008c"
        android:onClick="onInstantConsumptionClick"
        android:text="Instant \n Consumption"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#ec008c"
        android:onClick="onStatsClick"
        android:text="Stats"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#ec008c"
        android:onClick="onSetApplianceClick"
        android:text="Set Appliance"
        android:textSize="30dp" />

</RelativeLayout>