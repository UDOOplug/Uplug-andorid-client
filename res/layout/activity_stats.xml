<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/udoo_bg_2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UplugMainActivity" >

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60dp"
        android:background="#C0C0C0"
        android:onClick="onHalfHoursAvgClick"
        android:text="Half hours \n average"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignParentBottom="true"
        android:background="#8f8f8f"
        android:onClick="onTurnOnTimeClick"
        android:text="Turn on time"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#808080"
        android:onClick="onDailyAvgClick"
        android:text="Daily averages"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#B2B2B2"
        android:onClick="onComparisonClick"
        android:text="Comparison"
        android:textSize="40dp" />

</RelativeLayout>